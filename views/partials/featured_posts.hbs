<div class="container">
    <section class="featured-posts row no-margin-bottom">
        <h1 class="section-heading">Featured Posts</h1>
        {{#each featured}}
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image">
                    <img src="{{media.secure_url}}" class="img-responsive">
                    <a href="/p{{url}}" class="card-title">{{title}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </section>
</div>