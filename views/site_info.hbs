<!DOCTYPE html>
<html lang="en">

{{> admin_head}}

<body>

  {{> admin_nav}}

  <main class="row">

    <div class="container newPCont blue-grey lighten-5 blue-grey-text text-darken-4">
      <h5 style="margin-bottom: 3rem;margin-top:2rem">Site Info</h5>
      <div class="row">
        <form id="SiteInfoForm" class="col s12 m12" onsubmit="writeSiteInfo(); return false;">
          <div class="row">
            <div class="input-field col s12" style="margin-bottom:3rem;">
              <textarea id="aboutSite" class="materialize-textarea" required>
                {{{ metadata.about }}}
              </textarea>
              <label for="newPostFull" style="margin-top: -0rem;font-size: 1.5rem;color: #455A64;">About Coloured.com.ng</label>
            </div>
            <div class="input-field col s12">
              <textarea id="aboutAuthor" class="materialize-textarea">
                {{{ metadata.author.about }}}
              </textarea>
              <label style="margin-top: -0rem;font-size: 1.7rem;color:black" for="aboutAuthor">About Author</label>
            </div>
            <div class="col s12">
              <h5>Social Links <br></h5>
            </div>
            <div class="col s12 m6 l4">
              <i class="icon ion-social-facebook x15"> </i> facebook.com/
              <div class="input-field inline">
                <input value="{{ metadata.social.facebook }}" id="fbUrl" type="text" class="validate" required>
                <label for="fbUrl">facebook url</label>
              </div>
            </div>
            <div class="col s12 m6 l4">
              <i class="icon ion-social-twitter x15"> </i> twitter.com/
              <div class="input-field inline">
                <input value="{{ metadata.social.twitter }}" id="twUrl" type="text" class="validate" required>
                <label for="twUrl">Twitter url</label>
              </div>
            </div>
            <div class="col s12 m6 l4">
              <i class="icon ion-social-instagram x15"> </i> twitter.com/
              <div class="input-field inline">
                <input value="{{ metadata.social.instagram }}" id="igUrl" type="text" class="validate" required>
                <label for="twUrl">Instagram url</label>
              </div>
            </div>
            <div class="col s12">
              <button class="btn-large indigo white-text" type="submit">
                <i id="updateInfoSpinner" class="hide fa fa-spinner fa-pulse fa-2x fa-fw"> </i>
                submit
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>


  </main>

  <script async="" src="https://www.google-analytics.com/analytics.js"></script>
  <script>
    (function (i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-64939323-3', 'auto');
    ga('send', 'pageview');
  </script>
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>