<!DOCTYPE html>
<html lang="en">

{{> admin_head}}

<body>

  {{> admin_nav}}

  <main class="row">
    <a style="margin-left: 4rem;" class="newCatBtn btn indigo waves-effect waves-light">Create Category</a>
    <div class="fixed-action-btn">
      <a class="newCatBtn btn-floating btn-large indigo">
        <i class="large icon ion-plus"></i>
      </a>
    </div>

    <div class="catsCont container row teal-text text-darken-1">
      <br>
      {{#each categories}}
      <div class="col s12 m6 l4 name">
        <div class="card">
          <p>
            <i id="edit-{{name}}" class="icon ion-edit edit x2"></i>
            <span id="del-{{name}}" class="remove right"><i class="icon ion-close-circled x2 delete"></i></span>
          </p>
          <p class="flow-text center">{{name}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </main>


  <div id="create_catPop" class="popup animated hide">
    <div class="popup-overlay"></div>
    <div class="popup-body row">
      <div class="close-area"></div>
      <div class="container">
        <div class="card" style="max-width:30rem;">
          <div class="popup-header cyan center center-align">
            Create Category
            <span class="close-btn">
                <i class="icon ion-close-round x2"></i>
            </span>
          </div>
          <div class="popup-content row center-align" style="height: auto;">
            <div class="card content-card" style="padding-top: 1.5rem; height: auto;">
              <form onsubmit="createNewCat(); return false;" class="container">
                <div class="input-field col s12">
                  <input type="text" id="newCat">
                  <label for="newCat">Category Name</label>
                  <button class="btn teal" type="submit">Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="edit_catPop" class="popup animated hide">
    <div class="popup-overlay"></div>
    <div class="popup-body row">
      <div class="close-area"></div>
      <div class="container">
        <div class="card" style="max-width:30rem;">
          <div class="popup-header cyan center center-align">
            Edit Category
            <span class="close-btn">
                <i class="icon ion-close-round x2"></i>
            </span>
          </div>
          <div class="popup-content row center-align" style="height: auto;">
            <div class="card content-card" style="padding-top: 1.5rem; height: auto;">
              <form onsubmit="editCat(); return false;" class="container">
                <div class="input-field col s12">
                  <p id="oldName" class="hide"></p>
                  <input type="text" id="Catname" required>
                  <label for="newCat">Category Name</label>
                  <button class="btn teal" type="submit">Update</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script async="" src="https://www.google-analytics.com/analytics.js"></script>
  <script>
    (function (i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-64939323-3', 'auto');
    ga('send', 'pageview');
  </script>
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>