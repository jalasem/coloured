<!DOCTYPE html>
<html lang="en">

{{> admin_head}}

<body>

  {{> admin_nav}}
  <main>
    <a href="/controls/admin/createPost" class="newPostBtn btn indigo waves-effect waves-light">New Post</a>
    <div class="fixed-action-btn">
      <a href="/controls/admin/createPost" class="btn-floating btn-large indigo">
        <i class="large icon ion-plus"></i>
      </a>
    </div>

    <div class="container">
      <br>
      <div class="topInfoHeading">
        <h4>Featured Posts</h4>
        <p class="right"></p>
      </div>
      <table class="bordered highlight">
        <thead>
          <tr style="background: rgb(236, 239, 241);">
            <th> &nbsp; TITLE</th>
            <th>STATUS</th>
            <th>CREATED ON</th>
          </tr>
        </thead>

        <tbody>
          {{#each posts}}
          <tr class="featured" id="tr{{slug}}">
            <td id="{{slug}}">
              <p class="postTitle_viewTable"><a href="/posts/{{title}}" target="_blank">{{title}}</a></p>
              <div class="hide">
                <div class="post-description-viewTable">{{description}}</div>
                <span class="post-category-viewTable">{{category}}</span>
                <div class="post-full-viewTable">{{full_post}}</div>
                {{#if hasImage}}
                <span class="image-address">{{media.url}}</span> {{/if}}
              </div>
              <p class="actionsOnPost_viewTable">
                <span class="unfeatureAction_viewTable waves-effect btn-flat blue-grey lighten-2">UNFEATURE</span>
                <a href="/controls/posts/edit/{{slug}}" class="editAction_viewTable waves-effect btn-flat blue-grey lighten-4">Edit</a>
                <span class="deleteAction_viewTable waves-effect btn-flat blue-grey lighten-4">DELETE</span>
                <a href="/p{{url}}" target="_blank" class="viewAction_viewTable waves-effect btn-flat blue-grey lighten-4">VIEW</a>
              </p>
            </td>
            <td>Published</td>
            <td class="creationTime">{{getPostTime createdOn}}</td>
            <td class="creationTime">{{created_on}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </main>

  <!--<textarea class="hide">

  </textarea>-->

  {{> admin_popups}}
  {{> admin_footer}}
</body>

</html>